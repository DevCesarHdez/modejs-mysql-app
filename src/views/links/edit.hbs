<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form class="/links/edit/{{title.id}}" action="" method="post">
            <div class="form-group">
              <input type="text" class="form-control" name="title" placeholder="title" autofocus value="{{link.title}}">
            </div>
            <div class="form-group">
              <input type="url" class="form-control" name="url" placeholder="url" value="{{link.url}}">
            </div>
            <div class="form-group">
              <textarea name="description" rows="2" cols="" class="form-control" placeholder="description">
                {{link.description}}
              </textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-success btn-block rounded-0">Save</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
